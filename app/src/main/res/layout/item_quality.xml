<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dotImage"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/dot_unselect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/qualityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_144p"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@id/dotImage"
        app:layout_constraintBottom_toBottomOf="@id/dotImage"
        app:layout_constraintStart_toEndOf="@id/dotImage"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/mp4_35_26_mb"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@id/dotImage"
        app:layout_constraintBottom_toBottomOf="@id/dotImage"
        app:layout_constraintStart_toEndOf="@id/qualityText"
        />


</androidx.constraintlayout.widget.ConstraintLayout>