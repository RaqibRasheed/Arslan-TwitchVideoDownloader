<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.activities.UtilityActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_7sdp"
        android:background="@drawable/ripple_oval"
        android:src="@drawable/x"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drawerIc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/splash_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.125"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/captionText"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/captionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Twitch Video\nDownloader"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@+id/guide35"
        app:layout_constraintStart_toStartOf="@id/drawerIc"
        app:layout_constraintTop_toBottomOf="@id/drawerIc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/homeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:drawableStart="@drawable/home_ic"
        android:drawablePadding="@dimen/_25sdp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/_12sdp"
        android:text="@string/home"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_13ssp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="@id/captionText"
        app:layout_constraintTop_toBottomOf="@+id/guide35" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rateUsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:drawableStart="@drawable/rate_us_ic"
        android:drawablePadding="@dimen/_18sdp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/_12sdp"
        android:text="Rate Us"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_13ssp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/homeText"
        app:layout_constraintTop_toBottomOf="@id/homeText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/shareText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:drawableStart="@drawable/share_ic"
        android:drawablePadding="@dimen/_25sdp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/_12sdp"
        android:text="Share App"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_13ssp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="@id/rateUsText"
        app:layout_constraintTop_toBottomOf="@id/rateUsText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/privacyPolicyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:drawableStart="@drawable/privacy_ic"
        android:drawablePadding="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/_12sdp"
        android:text="Privacy Policy"
        android:gravity="center_vertical"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_13ssp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="@id/shareText"
        app:layout_constraintTop_toBottomOf="@id/shareText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/exitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:drawableStart="@drawable/exit_ic"
        android:drawablePadding="@dimen/_20sdp"
        android:fontFamily="@font/montserrat_medium"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Exit"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_13ssp"
        android:paddingStart="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/privacyPolicyText"
        app:layout_constraintTop_toBottomOf="@id/privacyPolicyText" />

</androidx.constraintlayout.widget.ConstraintLayout>